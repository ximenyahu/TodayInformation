<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_radius"
        android:gravity="center"
        android:text="实心圆"
        android:textSize="20sp" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:text="空心圆"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_rectangle"
        android:gravity="center"
        android:text="实心矩形"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_rectangle2"
        android:gravity="center"
        android:text="空心矩形"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_solid_corner_rectangle"
        android:gravity="center"
        android:padding="16dp"
        android:text="实心圆角矩形"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_hollow_corner_rectangle"
        android:gravity="center"
        android:padding="16dp"
        android:text="空心圆角矩形"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_gradient_solid_corner_rectangle"
        android:gravity="center"
        android:padding="16dp"
        android:text="渐变圆角矩形" />

    <com.simon.todayinformation.shape.ColorTextView
        android:gravity="center"
        android:background="@drawable/shape_gradient_solid_corner_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="Hello This is Simon" />


</LinearLayout>